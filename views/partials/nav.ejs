<div class="bg-blue-800 sticky top-0 w-full h-20 flex items-center justify-between select-none z-20">
  <!-- Logo -->
  <p class="relative text-white text-3xl font-extrabold italic m-7">FileZIP</p>

  <!-- Profile Picture + Dropdown -->
  <div class="relative mr-6">
    <!-- Profile Image (Click to Toggle Dropdown) -->
    <img id="profileButton" src="/images/default.jpg" alt="default" class="rounded-full h-12  border-gray-500 border-2 cursor-pointer">

    <!-- Dropdown Menu -->
    <div id="profileMenu" class="absolute bg-white border border-gray-200 rounded-lg shadow-lg w-64 right-0 top-full mt-2 flex flex-col items-end hidden">
      <!-- Profile -->
      <div class="flex items-start p-4 border-b gap-4">
        <img src="/images/default.jpg" alt="default" class="rounded-full h-12 border-gray-500 border-2">
        <div class="flex flex-col">
          <div>
            <p class="font-semibold">Youssef Bennaceur</p>
            <p class="text-gray-600 text-sm">test@test.com</p>
          </div>
        </div>
      </div>
      <!-- Dropdown Items -->
      <a href="#" class="block w-full px-4 py-2 text-gray-700 hover:bg-gray-100">Settings</a>
      <a href="#" class="block w-full px-4 py-2 text-red-600 hover:bg-gray-100">Logout</a>
    </div>
  </div>
</div>

<script>
  const profileButton = document.getElementById("profileButton");
  const profileMenu = document.getElementById("profileMenu");

  profileButton.addEventListener("click", () => {
    profileMenu.classList.toggle("hidden");
  });

  // Close dropdown when clicking outside
  document.addEventListener("click", (event) => {
    if (!profileButton.contains(event.target) && !profileMenu.contains(event.target)) {
      profileMenu.classList.add("hidden");
    }
  });
</script>
